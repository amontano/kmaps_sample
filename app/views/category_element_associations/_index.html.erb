<% if !category_associations.empty? %>
     <ul>
<%   category_associations.each do |association| %>
       <li><% category_header = association.category_header %>
<%=    category_header if !category_header.blank? %>
<%=h   link_to(association.category.title, authorized?(hash_for_edit_element_category_association_path) ? edit_element_category_association_path(element, association) : element_category_association_path(element, association)) %></li>
<%   end %>
     </ul>
<% end
   authorized_only hash_for_new_element_category_association_path do
	 links = [link_to('Add more', new_element_category_association_path(element))] %>
<%   links += element.roots.collect{|c| link_to "#{c.title}", associations_path(element, c) } %>
     <p><%= links.join(' | ') %></p>
<% end %>